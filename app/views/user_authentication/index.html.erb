<div>
  <div>
    <h1>
      List of Users
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |a_user| %>
        <tr>
          <td><%= a_user.username %></td>
          <td><%= a_user.private ? "Yes" : "No" %></td>
          <td>
            <%= render "follow_form", { :user => a_user } %>
          </td>
          <td>
              <!--- TODO: add another if statement if the person follows // if not say "you are not authorized to do tht -->
              <a href="/users/<%= a_user.username %>">
                Show details
              </a>
          </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
