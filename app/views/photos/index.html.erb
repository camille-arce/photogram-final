<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>



<% if @current_user != nil %>
<hr>
<div>
  <div>
    <form action="/insert_photo" method="post">
      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3">Enter a caption for the photo</textarea>
      </div>
      <button>
        Add photo
      </button>
    </form>
  </div>
</div>
<% else %>
<hr>
<% end %>

<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

          <th>
          Owner
        </th>

         <th>
         Posted
        </th>

        <th>
          Likes 
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>

        <td>
          <img src="<%= a_photo.image %>">
        </td>

         <td>
          <%= a_photo.caption %>
        </td>


        <td>
          <%= a_photo.poster.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>

          <td>
          <%= a_photo.photo_to_likes.count %>
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
